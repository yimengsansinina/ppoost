<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp">

    <ImageView
        android:id="@+id/cover_iv"
        android:layout_width="130dp"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="0dp"
        android:gravity="center_vertical|start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:id="@+id/name_tv"
        android:layout_marginTop="10dp"
        android:text="尋秦記"
        app:layout_constraintTop_toTopOf="@id/cover_iv"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@id/cover_iv"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="0dp"
        android:gravity="center_vertical|start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"

        android:id="@+id/year_tv"
        android:layout_marginTop="10dp"
        android:text="2020"
       app:layout_constraintTop_toBottomOf="@id/name_tv"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@id/cover_iv"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="0dp"
        android:gravity="center_vertical|start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:id="@+id/area_tv"
        android:layout_marginTop="10dp"
        android:text="香港"
       app:layout_constraintTop_toBottomOf="@id/year_tv"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@id/cover_iv"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="0dp"
        android:gravity="center_vertical|start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:id="@+id/actor_tv"
        android:layout_marginTop="10dp"
        android:text="張咪咕"
       app:layout_constraintTop_toBottomOf="@id/area_tv"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@id/cover_iv"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:ellipsize="end"
        android:lines="2"

        android:id="@+id/info_tv"
        android:layout_marginTop="10dp"
        android:text="張咪咕張咪咕張咪咕張咪咕張咪咕張咪咕張咪咕"
       app:layout_constraintTop_toBottomOf="@id/actor_tv"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@id/cover_iv"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:layout_width="0dp"
        android:gravity="center_vertical|start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>